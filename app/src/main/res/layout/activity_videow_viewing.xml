<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:backgroundTint="#fff"
    android:layout_height="match_parent"
    tools:context=".VideowViewing">


    <include
        android:layout_width="match_parent"
        android:layout_height="35dp"
        layout = "@layout/app_bar_layout"
        android:id="@+id/chatbarLayout"/>

    <ProgressBar
        android:id="@+id/progress_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <androidx.recyclerview.widget.RecyclerView
        android:orientation="horizontal"
        android:id="@+id/memeRecyclerView"
        android:layout_below="@+id/chatbarLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>

    <androidx.cardview.widget.CardView
        android:id="@+id/videoViewCard"
        android:background="@color/BlueishBlack"
        android:backgroundTint="@color/BlueishBlack"
        android:layout_marginTop="35dp"
        android:clickable="true"
        android:contextClickable="true"
        android:layout_width="match_parent"
        android:layout_height="380dp">




        <LinearLayout
            android:clickable="true"
            android:contextClickable="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <pl.droidsonroids.gif.GifImageView
                android:layout_width="50dp"
                android:layout_gravity="center"
                android:layout_height="50dp"
                android:src="@drawable/pagiis_splash_logo_edit_final_r_file"/>


            <TextView
                android:id="@+id/videotitle"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:fontFamily="@font/robobold"
                android:ellipsize="end"
                android:lines="2"
                android:scrollHorizontally="true"
                android:src="@drawable/pagiis_logo_final"
                android:text="Pagiis"
                android:textColor="@color/AlertRed"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/closeVideoPlay"
                android:layout_width="30dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:clickable="true"
                android:src="@drawable/previous" />


        </LinearLayout>


        <VideoView
            android:id="@+id/memeImageViewVideo"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:clickable="false"
            android:contextClickable="true"
            android:foregroundGravity="center"
            android:gravity="center" />


        <ProgressBar
            android:id="@+id/progress_circle_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="200dp" />

    </androidx.cardview.widget.CardView>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/goToVideosUpload"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="97dp"
        android:backgroundTint="#FFFFFF"
        android:clickable="true"
        android:src="@drawable/video_camera"
        app:fabCustomSize="40dp" />


</RelativeLayout>