<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:layout_gravity="center_horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="10dp"
    android:layout_margin="16dp"
    tools:context=".ActivityUserPost">


    <LinearLayout
        android:id="@+id/selectChoseOptionLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="248dp"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:background="@color/Orrnge"
                android:gravity="center"
                android:text="Please Attach proof of payment / Add  item to Cart"
                android:textColor="@color/BlueishBlack"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="181dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/cameraOption"
                    android:layout_width="92dp"
                    android:layout_height="94dp"
                    android:layout_marginStart="5dp"
                    android:clickable="true"
                    android:src="@drawable/invoice" />

                <ImageView
                    android:id="@+id/GalleryOption"
                    android:layout_width="95dp"
                    android:layout_height="92dp"
                    android:layout_marginStart="50dp"
                    android:clickable="true"
                    android:src="@drawable/cart" />

            </LinearLayout>
        </LinearLayout>


        <ImageView
            android:id="@+id/homeButotn"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/Orrnge"
            android:clickable="true"
            android:src="@drawable/ic_action_cloase_red" />

    </LinearLayout>

</androidx.cardview.widget.CardView>