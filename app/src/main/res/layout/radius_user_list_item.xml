<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    app:cardElevation="10dp"
    android:clickable="true"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="16dp"
        android:weightSum="10">

        <ImageView
            android:src="@drawable/ic_log_out_white"
            android:id="@+id/friendImageView"
            android:layout_width="80dp"
            android:scaleType="centerCrop"
            android:layout_height="80dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/friendUserName"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginStart="3dp"
                    android:textSize="14sp"
                    android:paddingLeft="8dp"
                    android:paddingStart="8dp"
                    android:textColor="@color/DarkGreen"
                    android:text="Username"
                     />

                <ImageView

                    android:id="@+id/OnlineIcon"
                    android:layout_width="16dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:paddingEnd="3dp"
                    android:paddingRight="3dp"
                    android:src="@drawable/green_online_icon"
                    android:visibility="invisible" />

            </LinearLayout>


            <LinearLayout

                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textAlignment="textEnd"
                    android:id="@+id/DisplayTextTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginStart="50dp"
                    android:clickable="true"
                    android:paddingLeft="8dp"
                    android:paddingStart="8dp"
                    android:text=" Online Posts " />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>