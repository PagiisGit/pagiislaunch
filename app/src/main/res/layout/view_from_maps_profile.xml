<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityOwnProfile">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="230dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/goBackArrow"
                android:clickable="true"
                android:src="@drawable/ic_back_icon"
                android:layout_width="35dp"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/profileUSerName"
                android:backgroundTint="@color/Orrnge"
                android:gravity="center"
                android:layout_width="300dp"
                android:layout_height="36dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:text="UserName"
                android:textColor="@color/SquareBack"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/viewfrom_maps_ImageView"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="13dp"
                    android:background="@drawable/text_view_boader_orrnge"
                    android:src="@drawable/default_display_pic" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/declineRequest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="91dp"
                    android:backgroundTint="@color/BlueishBlack"
                    android:src="@drawable/ic_decline_icon"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="91dp" />

            </RelativeLayout>



        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="180dp">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginStart="25dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:clickable="true"
                        android:id="@+id/view_from_maps_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/DarkGreen"
                        android:text="Comment"
                        android:textColor="@color/Orrnge"
                        android:textColorHint="@color/Orrnge"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginStart="60dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:clickable="true"
                        android:id="@+id/viewFromMaps_likeButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/BlueishBlack"
                        android:text="Like"
                        android:textColor="@color/Orrnge"
                        android:textColorHint="@color/Orrnge"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/profileNameIcon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_profile"/>

            <TextView
                android:id="@+id/profileNameText"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Full Name"/>
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:paddingLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/profileEmail"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_email_icon"/>

            <TextView
                android:id="@+id/profileEmailText"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="email address"/>
        </LinearLayout>


        <LinearLayout

            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:paddingLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/profileMobile"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_phone"/>

            <TextView
                android:id="@+id/profileMobileText"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="mobile number"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:paddingLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:clickable="true"
                android:id="@+id/profileProffession"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_proffession"/>

            <TextView
                android:id="@+id/profileProffessionText"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Proffession"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/mapsAddFriendButton"
        android:textColor="#fff"
        android:backgroundTint="@color/Orrnge"
        android:background="@drawable/follow_button_background"
        android:layout_marginTop="50dp"
        android:textSize="16dp"
        android:textColorHint="@color/SquareBack"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD Friend"/>

</LinearLayout>