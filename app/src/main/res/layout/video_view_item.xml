<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:contextClickable="true"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:background="@color/LemonChaffon"
    android:clickable="true"
    android:backgroundTint="@color/LemonChaffon"
    android:foreground="?android:selectableItemBackground"
    android:layout_height="445dp">

    <LinearLayout
        android:clickable="true"
        android:contextClickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:clickable="true"
            android:contextClickable="true"
            android:id="@+id/TitleId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:clickable="true"
                android:contextClickable="true"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">


                <ImageView
                    android:clickable="true"
                    android:contextClickable="true"
                    android:id="@+id/user_item_view_profilepic"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="1dp"
                    android:src="@drawable/pagiis_logo_final" />


                <LinearLayout
                    android:clickable="true"
                    android:contextClickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/postUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="3dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:scrollHorizontally="true"
                        android:gravity="start"
                        android:text="video"
                        android:textAlignment="textStart"
                        android:textColor="#000"
                        android:textSize="9sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/postPosition"
                        android:layout_width="352dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:layout_marginStart="2dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:layout_gravity="center_vertical"
                        android:scrollHorizontally="true"
                        android:text="video"
                        android:textColor="@color/IntroDescriptionColor"
                        android:textSize="6sp"
                        android:textStyle="normal"
                        tools:ignore="RtlCompat" />


                </LinearLayout>


            </LinearLayout>


            <RelativeLayout
                android:clickable="true"
                android:contextClickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ProgressBar
                    android:id="@+id/videoProgressBar"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center" />


                <ImageView
                    android:src="@drawable/ui"
                    android:id="@+id/volumeControlOff"
                    android:layout_width="20dp"
                    android:clickable="true"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="17dp"
                    android:layout_marginTop="14dp" />


                <VideoView
                    android:id="@+id/memeImageView"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:foregroundGravity="center" />


            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:clickable="true"
            android:contextClickable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/views"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground"
                android:src="@drawable/viewers" />

            <ImageView
                android:id="@+id/pagiis_radius_friends"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground"
                android:src="@drawable/location_group" />

            <ImageView
                android:id="@+id/pagiis_radius_chat"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground"
                android:src="@drawable/location_based_chat" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:background="@color/lightOrrnge"
            android:backgroundTint="@color/lightOrrnge"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/viewers"
                android:layout_width="20dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="views"
                android:textColor="@color/AlertRed"
                android:textSize="5sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/share"
                android:layout_width="20dp"
                android:layout_height="10dp"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:text="share"
                android:textColor="@color/AlertRed"
                android:textSize="5sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/chats"
                android:layout_width="20dp"
                android:layout_height="10dp"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:text="update"
                android:textSize="5sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="178dp"
            android:layout_marginTop="3dp"
            android:clickable="true"
            android:contextClickable="true"
            android:orientation="vertical">

            <LinearLayout
                android:background="@drawable/follow_button_background"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:backgroundTint="#fff"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/user_name"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="30dp"
                    android:src="@drawable/location"
                    android:text="user_name" />


                <TextView
                    android:id="@+id/post_title"
                    android:layout_width="263dp"
                    android:layout_height="38dp"
                    android:layout_gravity="start"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="2dp"
                    android:ellipsize="end"
                    android:lines="4"
                    android:scrollHorizontally="true"
                    android:text="_@PAGiiS"
                    android:textColor="@color/DarkGreen"
                    android:textSize="9sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/likes_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:text="likes"
                    android:textColor="@color/bluelight"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/likes_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/BlueishBlack"
                    android:textSize="10sp"
                    android:textStyle="bold" />


                <ImageView
                    android:clickable="true"
                    android:layout_width="25dp"
                    android:foreground="?android:selectableItemBackground"
                    android:layout_height="25dp"
                    android:layout_marginStart="3dp"
                    android:src="@drawable/heart_yellow" />
            </LinearLayout>


            <ImageView
                android:id="@+id/ripple_button"
                android:layout_width="28dp"
                android:layout_height="25dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="350dp"
                android:layout_marginTop="3dp"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground"
                android:src="@drawable/click_one" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>