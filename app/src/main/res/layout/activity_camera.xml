<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityCamera"
    android:orientation="vertical"
    android:weightSum="10">

    <include
        android:layout_width="match_parent"
        android:layout_height="35dp"
        layout = "@layout/app_bar_layout"
        android:id="@+id/chatbarLayout"/>


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:background="@color/LemonChaffon"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:padding="4dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chosenTitleEditLayout"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/writeStatus"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="3dp"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground"
                android:src="@drawable/pagiis_logo_final" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/chosenTitleEdit"
                android:layout_width="337dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:background="@drawable/black_text_view_background"
                android:backgroundTint="#fff"
                android:clickable="true"
                android:contextClickable="true"
                android:gravity="center"
                android:hint="Type title ..."
                android:textColorHighlight="@color/SquareBack"
                android:textColorHint="@color/AlertRed" />
        </LinearLayout>


        <LinearLayout
            android:backgroundTint="@color/LemonChaffon"
            android:layout_width="wrap_content"
            android:background="@color/LemonChaffon"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:background="@color/LemonChaffon"
                android:backgroundTint="@color/LemonChaffon"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chosenTitleEdit"
                >

                <ImageView

                    android:id="@+id/cameraImageView"
                    android:layout_width="391dp"
                    android:layout_height="564dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:background="@color/LemonChaffon"
                    android:backgroundTint="@color/LemonChaffon"
                    android:clickable="true"
                    android:src="@drawable/for_camera_post" />

                <ProgressBar

                    android:id="@+id/progress_circle_camera"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            app:fabCustomSize="40dp"
            android:id="@+id/uploadChosenFile"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:src="@drawable/click_one"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" >



        </com.google.android.material.floatingactionbutton.FloatingActionButton>

    </RelativeLayout>

</androidx.cardview.widget.CardView>