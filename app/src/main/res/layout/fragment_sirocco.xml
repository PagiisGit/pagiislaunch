<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context=".LinkView">






    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <WebView
            android:id="@+id/webview"
            android:background="#fff"
            android:layout_marginBottom="55dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </WebView>



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mapsProfileCategory"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="290dp"
            android:background="#55000000"
            android:backgroundTint="#55000000"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="75dp">


        </androidx.recyclerview.widget.RecyclerView>







        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="202dp"
            android:id="@+id/storeListCardView"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="15dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="80dp"
            android:background="#805500">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">


                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/hideStoreList"
                        android:layout_width="30dp"
                        android:background="#fff"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="5dp"
                        android:layout_height="35dp"
                        android:src="@drawable/previous">


                    </com.mikhaellopez.circularimageview.CircularImageView>

                    <TextView
                        android:gravity="center_horizontal"
                        android:text="View"
                        android:id="@+id/siroccoCatergoryText"
                        android:textSize="15sp"
                        android:padding="10dp"
                        android:textColor="@color/colorPrimaryOne"
                        android:fontFamily="@font/robobold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>


                </androidx.appcompat.widget.LinearLayoutCompat>



                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/storeList"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </androidx.recyclerview.widget.RecyclerView>




            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.cardview.widget.CardView>

        <ProgressBar
            android:id="@+id/progress_circle_user_memes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

        </ProgressBar>



        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/siroccoHome"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:backgroundTint="#FFFFFF"
            android:clickable="true"
            android:src="@drawable/ic_sirocco_icon"
            app:fabCustomSize="40dp"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/SABrands"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="110dp"
            android:backgroundTint="#FFFFFF"
            android:clickable="true"
            android:src="@drawable/store"
            app:fabCustomSize="40dp"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,TouchTargetSizeCheck">

        </com.google.android.material.floatingactionbutton.FloatingActionButton>





    </RelativeLayout>


</androidx.cardview.widget.CardView>