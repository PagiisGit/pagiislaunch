<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/homeFragment"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/memeRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-1dp">


        </androidx.recyclerview.widget.RecyclerView>

        <ImageView
            android:id="@+id/businessId"
            android:layout_width="83dp"
            android:layout_height="73dp"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:src="@drawable/media"
            tools:ignore="SpeakableTextPresentCheck" />


        <ProgressBar
            android:id="@+id/progress_circle_user_memes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

        </ProgressBar>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/SearchRecyclerViewTop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:background="#55000000"
            android:backgroundTint="#55000000"
            android:contextClickable="true"
            android:orientation="vertical">

        </androidx.recyclerview.widget.RecyclerView>




        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/goToVideos"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="140dp"
            android:backgroundTint="#FFFFFF"
            android:clickable="true"
            android:src="@drawable/video_camera"
            app:fabCustomSize="40dp"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/goToMaps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="90dp"
            android:backgroundTint="#FFFFFF"
            android:clickable="true"
            android:src="@drawable/map"
            app:fabCustomSize="40dp"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />


        <androidx.cardview.widget.CardView
            android:id="@+id/searchTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="#55000000"
            android:backgroundTint="#55000000"
            app:cardCornerRadius="100dp">


            <LinearLayout
                android:id="@+id/nputLayout"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/follow_button_background"
                android:backgroundTint="#55000000">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/searchEdittext"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="2dp"
                    android:fontFamily="@font/robobold"
                    android:gravity="center"
                    android:hint="Type"
                    android:outlineSpotShadowColor="@color/BlueishBlack"
                    android:textAlignment="textStart"
                    android:textColor="#fff"
                    android:textColorHighlight="@color/LemonChaffon"
                    android:textColorHint="@color/EndBlue"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat,TouchTargetSizeCheck" />


                <ImageView
                    android:id="@+id/LogSearchIconGo"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:src="@drawable/search"
                    tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</FrameLayout>