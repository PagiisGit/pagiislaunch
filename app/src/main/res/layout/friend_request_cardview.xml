<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="155dp"
    android:background="@color/LemonChaffon"
    android:backgroundTint="@color/LemonChaffon"
    android:layout_height="240dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:background="@drawable/text_view_boarder"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="31dp"
            android:layout_height="25dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/identification" />

        <TextView
            android:gravity="center"
            android:text="Request UserName"
            android:paddingStart="8dp"
            android:background="@color/BlueishBlack"
            android:textColor="@color/AlertRed"
            android:id="@+id/friendRequestUserName"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:textSize="10sp"
            android:paddingLeft="8dp" />


        <ImageView
            android:padding="2dp"
            android:background="@drawable/text_view_boader_orrnge"
            android:id="@+id/friendRequestImageView"
            android:src="@drawable/user"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">


            <Button
                android:backgroundTint="@color/Orrnge"
                android:text="ACCEPT"
                android:textSize="8sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:id="@+id/friendRequestAccept"
                android:layout_marginStart="15dp"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp" />

            <Button
                android:id="@+id/friendRequestDecline"
                android:backgroundTint="@color/SquareBack"
                android:textColor="@color/Orrnge"
                android:textSize="8sp"
                android:text="decline"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp" />


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>