<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/LemonChaffon"
    android:backgroundTint="@color/lightOrrnge"
    android:layout_height="match_parent"
    tools:context=".LinkPost">

    <include
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        layout = "@layout/app_bar_layout"
        android:id="@+id/chatbarLayout"/>



    <androidx.cardview.widget.CardView
        android:id="@+id/userMemeCardView"
        android:layout_width="350dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="150dp"
        android:backgroundTint="@color/LemonChaffon"
        android:background="@color/LemonChaffon"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/TitleId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:clickable="true"
                android:contextClickable="true"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal">


                <ImageView
                    android:clickable="true"
                    android:background="@drawable/follow_button_background"
                    android:id="@+id/close_link"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:backgroundTint="@color/LemonChaffon"
                    android:layout_marginStart="3dp"
                    android:src="@drawable/previous" />

                <LinearLayout
                    android:layout_width="230dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/memeName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:layout_marginStart="2dp"
                        android:clickable="true"
                        android:textColor="@color/BlueishBlack"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/postTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:layout_marginStart="2dp"
                            android:clickable="true"
                            android:ellipsize="end"
                            android:scrollHorizontally="true"
                            android:textColor="@color/BlueishBlack"
                            android:textSize="8sp"
                            android:textStyle="bold"
                            tools:ignore="RtlCompat" />


                        <TextView
                            android:id="@+id/postPosition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:ellipsize="end"
                            android:lines="1"
                            android:scrollHorizontally="true"
                            android:textColor="@color/BlueishBlack"
                            android:textSize="8sp"
                            android:textStyle="bold"
                            tools:ignore="RtlCompat" />


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


            <RelativeLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:foregroundGravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:contextClickable="true"
                tools:ignore="WebViewLayout">

                <WebView
                    android:id="@+id/memeImageView"
                    android:layout_width="match_parent"
                    android:layout_height="310dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:focusable="true"
                    android:foregroundGravity="center"
                    android:padding="5dp"
                    android:scaleType="centerCrop" />


                <ImageView
                    android:id="@+id/likes"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@color/BlueishBlack"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/heart" />

                <TextView
                    android:id="@+id/likesText"
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/DarkGreen"
                    android:textSize="10sp"
                    android:textStyle="bold" />


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:clickable="true"
                android:contextClickable="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/views"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:src="@drawable/viewers" />

                <ImageView
                    android:id="@+id/pagiis_radius_friends"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:src="@drawable/location_group" />

                <ImageView
                    android:id="@+id/pagiis_radius_chat"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:src="@drawable/location_based_chat" />


            </LinearLayout>


            <LinearLayout
                android:backgroundTint="@color/BlueishBlack"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/viewers"
                    android:layout_width="20dp"
                    android:layout_height="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="views"
                    android:textColor="@color/AlertRed"
                    android:textSize="5sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/share"
                    android:layout_width="20dp"
                    android:layout_height="5dp"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:text="share"
                    android:textColor="@color/AlertRed"
                    android:textSize="5sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/chats"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:text="update"
                    android:textColor="@color/AlerLime"
                    android:textSize="5sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:backgroundTint="#fff"
                android:background="@drawable/follow_button_background"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="178dp"
                android:layout_marginTop="3dp"
                android:clickable="true"
                android:contextClickable="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:backgroundTint="#fff"
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/user_name"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="30dp"
                        android:src="@drawable/link"
                        android:text="user_name" />


                    <TextView
                        android:id="@+id/post_title"
                        android:layout_width="246dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="2dp"
                        android:ellipsize="end"
                        android:lines="2"
                        android:scrollHorizontally="true"
                        android:text="_@PAGiiS"
                        android:textColor="@color/DarkGreen"
                        android:textSize="12sp"
                        android:textStyle="normal" />


                </LinearLayout>




                <ImageView
                    android:id="@+id/ripple_button"
                    android:layout_width="35dp"
                    android:layout_marginTop="1dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="270dp"
                    android:clickable="true"
                    android:src="@drawable/click_one" />


            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="35dp">


            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">


        <ImageView
            android:id="@+id/linkPostInstruction"
            android:layout_width="238dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_above="@+id/linkOptionLayout"
            android:clickable="true"
            android:src="@drawable/ii_link_ii" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linkOptionLayout"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:orientation="vertical">




            <ImageView
                android:id="@+id/linkPostFacebookIcon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:src="@drawable/facebook_icon" />


            <ImageView
                android:id="@+id/linkPostInstagram"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:src="@drawable/insta_icon" />


            <ImageView
                android:id="@+id/linkPostTwitter"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:src="@drawable/tweeter_icon" />


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>