<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:padding="12dp"
    android:id="@+id/primaryItem"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        android:layout_height="60dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/profileServiceImage"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/tag_siroco"
                android:layout_height="match_parent">



            </ImageView>

            <ProgressBar
                android:id="@+id/progress_circle_user_memes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">


            </ProgressBar>


        </RelativeLayout>





    </androidx.cardview.widget.CardView>
    
    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="Category"
            android:id="@+id/profileServiceCategory"
            android:fontFamily="@font/yogamedium"
            android:textColor="@color/EndBlue"
            android:textSize="22sp"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:text="Status"
            android:id="@+id/profileServiceCategoryDescription"
            android:fontFamily="@font/yogamedium"
            android:textColor="@color/primaryDark"
            android:textSize="14sp"
            android:layout_height="wrap_content"></TextView>

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>