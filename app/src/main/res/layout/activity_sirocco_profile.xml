<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SiroccoProfile">

    <include
        android:layout_width="match_parent"
        android:layout_height="35dp"
        layout = "@layout/app_bar_layout"
        android:id="@+id/chatbarLayout"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:backgroundTint="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">


            <TextView
                android:id="@+id/profileName"
                android:layout_width="300dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/Orrnge"
                android:gravity="center"
                android:text="Sirocco"
                android:textColor="@color/SquareBack"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ImageDP"
                    android:layout_width="160dp"
                    android:layout_height="150dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:src="@drawable/ic_sirocco_icon" />

            </RelativeLayout>


        </LinearLayout>

        <androidx.cardview.widget.CardView

            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="220dp">

            <LinearLayout
                android:background="@drawable/black_text_view_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/profileStatus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:gravity="center"
                    android:text="Hi, welcome to Sirocco."
                    android:textColor="@color/SquareBack"
                    android:textStyle="bold" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="310dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="310dp">

            <LinearLayout
                android:background="@drawable/orrnge_text_background_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">


                <ImageView
                    android:contextClickable="true"
                    android:layout_marginStart="5dp"
                    android:id="@+id/SiroccoProfileHealinesR"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>



        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            android:paddingLeft="25dp">

            <TextView

                android:id="@+id/profileProffessionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="30dp"
                android:text="Powered by"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/profileProffession"
                android:layout_width="26dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:clickable="true"
                android:src="@drawable/pagiis_logo_final" />
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>