<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewUsersMemes">


    <include
        android:id="@+id/chatbarLayout"
        layout = "@layout/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="35dp"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/memeRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/chatbarLayout"
        android:layout_marginTop="0dp"></androidx.recyclerview.widget.RecyclerView>

    <ImageView
        android:id="@+id/businessId"
        android:layout_width="83dp"
        android:layout_height="73dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:src="@drawable/media" />


    <ProgressBar
        android:id="@+id/progress_circle_user_memes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />




    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/SearchRecyclerViewTop"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_below="@+id/chatbarLayout"
        android:layout_alignParentStart="true"
        android:layout_margin="1dp"
        android:backgroundTint="@color/LemonChaffon"
        android:contextClickable="true"
        android:orientation="horizontal">

    </androidx.recyclerview.widget.RecyclerView>



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/logSearchIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="85dp"
        android:clickable="true"
        android:contextClickable="true"
        android:src="@drawable/search"
        app:fabCustomSize="40dp" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/contentRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/logSearchIcon"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:backgroundTint="#FFFFFF"
        android:clickable="true"
        android:src="@drawable/ic_action_chached"
        app:fabCustomSize="40dp" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/goToEvents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/logSearchIcon"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="142dp"
        android:backgroundTint="#FFFFFF"
        android:clickable="true"
        android:src="@drawable/time_and_date"
        app:fabCustomSize="40dp" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/goToVideos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/logSearchIcon"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="197dp"
        android:backgroundTint="#FFFFFF"
        android:clickable="true"
        android:src="@drawable/video_camera"
        app:fabCustomSize="40dp" />


    <TextView
        android:id="@+id/SearcNotice"
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="no searched results found !!! "
        android:textColor="@color/AlerLime"
        android:textSize="20sp" />


    <LinearLayout

        android:id="@+id/searchTextInputLayout"
        android:layout_width="343dp"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="152dp"
        android:background="@drawable/follow_button_background"
        android:backgroundTint="@color/BlueishBlack"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:contextClickable="true"
            android:orientation="horizontal">



        </LinearLayout>


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/searchEdittext"
            android:layout_width="249dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="2dp"
            android:gravity="center"
            android:hint="pagiis search ..."
            android:outlineSpotShadowColor="@color/BlueishBlack"
            android:textAlignment="textStart"
            android:textColor="@color/BlueishBlack"
            android:textColorHighlight="@color/AlertRed"
            android:textColorHint="@color/AlertRed"
            android:textSize="10sp"
            tools:ignore="RtlCompat" />


        <ImageView
            android:id="@+id/LogSearchIconGo"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:contextClickable="true"
            android:src="@drawable/search" />

    </LinearLayout>

</RelativeLayout>