<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:contextClickable="true"
    android:background="#55000000"
    android:backgroundTint="#55000000"
    android:foreground="?android:selectableItemBackground"
    android:layout_height="wrap_content"
    tools:targetApi="honeycomb">

    <androidx.cardview.widget.CardView
        android:id="@+id/userMemeCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:contextClickable="true"
        android:background="#55000000"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        tools:ignore="DuplicateClickableBoundsCheck,DuplicateClickableBoundsCheck,DuplicateClickableBoundsCheck,DuplicateClickableBoundsCheck">


        <LinearLayout
            android:id="@+id/TitleId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contextClickable="true"
            android:background="#55000000"
            android:backgroundTint="#55000000"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:contextClickable="true"
                android:orientation="horizontal">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/user_item_view_profilepic"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="#FFFFFF"
                    android:clickable="true"
                    android:padding="3dp"
                    android:src="@drawable/pagiis_splash_logo_edit_final_r_file"
                    tools:ignore="SpeakableTextPresentCheck" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/memeName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="12dp"
                        android:clickable="true"
                        android:fontFamily="@font/robobold"
                        android:text="Username"
                        android:textColor="@color/BlueishBlack"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/postTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:clickable="true"
                            android:ellipsize="end"
                            android:fontFamily="@font/robobold"
                            android:scrollHorizontally="true"
                            android:text="Date"
                            android:textColor="@color/BlueishBlack"
                            android:textSize="8sp"
                            android:textStyle="bold"
                            tools:ignore="RtlCompat" />


                        <TextView
                            android:id="@+id/postPosition"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:fontFamily="@font/robobold"
                            android:lines="1"
                            android:fadingEdgeLength="10dp"
                            android:scrollHorizontally="true"
                            android:text="Live Location"
                            android:textColor="@color/BlueishBlack"
                            android:textSize="8sp"
                            android:textStyle="bold"
                            tools:ignore="RtlCompat" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:contextClickable="true"
                android:foregroundGravity="center"
                android:gravity="center"
                tools:ignore="DuplicateClickableBoundsCheck">


                <io.github.ponnamkarthik.richlinkpreview.RichLinkView
                    android:id="@+id/memeImageViewLink"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="-4dp"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:focusable="true"
                    android:foregroundGravity="center"
                    android:padding="5dp"
                    android:scaleType="centerCrop"
                    tools:ignore="SpeakableTextPresentCheck">


                </io.github.ponnamkarthik.richlinkpreview.RichLinkView>

                <ImageView
                    android:id="@+id/memeImageView"
                    android:layout_width="match_parent"
                    android:layout_height="470dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="0dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="0dp"
                    android:layout_marginTop="0dp"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:focusable="true"
                    android:foregroundGravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:src="@drawable/for_gallery_pic"
                    tools:ignore="SpeakableTextPresentCheck" />


                <ProgressBar
                    android:id="@+id/loading"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="181dp"
                    android:layout_marginTop="181dp"
                    android:layout_marginBottom="203dp">

                </ProgressBar>


                <!-- <com.mikhaellopez.circularimageview.CircularImageView
                     android:id="@+id/likes"
                     android:layout_width="33dp"
                     android:layout_height="33dp"
                     android:layout_alignParentRight="true"
                     android:layout_marginTop="5dp"
                     android:layout_marginRight="15dp"
                     android:backgroundTint="@color/BlueishBlack"
                     android:clickable="true"
                     android:focusable="true"
                     android:src="@drawable/heart"
                     tools:ignore="SpeakableTextPresentCheck" /> -->



            </RelativeLayout>


            <LinearLayout
                android:id="@+id/reactingIconsLayout"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_above="@id/reactingLayout"
                android:background="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:contextClickable="true"
                android:orientation="horizontal">



                   <!-- <xyz.hanks.library.bang.SmallBangView
                        android:id="@+id/imageViewAnimation"
                        android:layout_width="30dp"
                        android:clickable="true"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center"
                        android:layout_height="30dp"
                        tools:ignore="MissingClass">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:clickable="true"
                            android:layout_height="30dp"
                            android:src="@drawable/heart_seletor" />

                    </xyz.hanks.library.bang.SmallBangView>-->

                <com.varunest.sparkbutton.SparkButton
                    android:id="@+id/imageViewAnimation"
                    android:layout_width="35dp"
                    android:layout_gravity="center"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    app:sparkbutton_activeImage="@drawable/ic_heart_red"
                    app:sparkbutton_inActiveImage="@drawable/heart_seletor"
                    app:sparkbutton_iconSize="30dp"
                    app:sparkbutton_primaryColor="@color/Orrnge"
                    app:sparkbutton_secondaryColor="@color/AlertRed">


                </com.varunest.sparkbutton.SparkButton>



               <!-- <ImageView
                    android:id="@+id/pagiis_radius_friends"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="20dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:src="@drawable/location_group"
                    tools:ignore="RtlCompat,SpeakableTextPresentCheck" />

                <ImageView
                    android:id="@+id/pagiis_radius_chat"
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:src="@drawable/location_based_chat"
                    tools:ignore="RtlCompat" /> -->


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/reactingIconsLayout"
                android:background="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/likesText"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/robobold"
                    android:gravity="center"
                    android:text="Likes"
                    android:textColor="@color/EndBlue"
                    android:textSize="9sp"
                    android:textStyle="bold" />

                <!--<TextView
                    android:id="@+id/share"
                    android:layout_width="30dp"
                    android:layout_height="10dp"
                    android:fontFamily="@font/robobold"
                    android:gravity="center"
                    android:text="share"
                    android:textColor="@color/EndBlue"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/chats"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/robobold"
                    android:gravity="center"
                    android:text="update"
                    android:textColor="@color/AlerLime"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" /> -->

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/reactingLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:background="@drawable/follow_button_background"
                android:backgroundTint="#FFFFFF"
                android:clickable="true"
                android:contextClickable="true"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="RtlCompat">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginEnd="4dp"
                    android:background="#FFFFFF"
                    android:backgroundTint="#FFFFFF"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/user_name"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="40dp"
                        android:src="@drawable/location"
                        android:text="user_name" />


                    <TextView
                        android:id="@+id/post_title"
                        android:layout_width="246dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="2dp"
                        android:layout_marginLeft="5dp"
                        android:background="#FFFFFF"
                        android:ellipsize="end"
                        android:fontFamily="@font/robobold"
                        android:lines="2"
                        android:scrollHorizontally="true"
                        android:text="_@PAGiiS"
                        android:textColor="@color/BlueishBlack"
                        android:textSize="12sp"
                        android:textStyle="normal" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>

