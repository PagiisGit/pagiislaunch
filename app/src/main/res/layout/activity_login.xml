<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5500"
        android:backgroundTint="@color/bluelight">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/pagiis_splash_logo_edit_final_r_file" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="250dp"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/loginEmail"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:background="@drawable/follow_button_background"
                android:backgroundTint="#fff"
                android:drawableLeft="@drawable/ic_baseline_email"
                android:drawablePadding="12dp"
                android:fontFamily="@font/robobold"
                android:hint=" Email"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:layout_marginTop="15dp"
                android:paddingLeft="10dp"
                android:textColor="@color/BlueishBlack"
                android:textColorHighlight="@color/Orrnge"
                android:textColorHint="@color/BlueishBlack"
                android:textSize="15sp"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/loginPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dp"
                android:background="@drawable/follow_button_background"
                android:backgroundTint="#fff"
                android:drawableLeft="@drawable/ic_action_lock"
                android:drawablePadding="10dp"
                android:fontFamily="@font/robobold"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textColor="@color/BlueishBlack"
                android:textColorHighlight="@color/Orrnge"
                android:textColorHint="@color/BlueishBlack"
                android:textSize="15dp"
                tools:ignore="TouchTargetSizeCheck" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/buttonLogin"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/follow_button_background"
                android:backgroundTint="@color/EndBlue"
                android:gravity="center_horizontal"
                android:text="Sign In"
                android:textColor="@color/BlueishBlack"
                android:textSize="17sp"
                android:textStyle="bold" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/forgotPasswordButton"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:background="#5500"
                android:backgroundTint="#fff"
                android:drawableRight="@drawable/ic_action_chached"
                android:fontFamily="@font/robobold"
                android:gravity="center"
                android:padding="7dp"
                android:paddingLeft="5dp"
                android:text="Forgot password?"
                android:textColor="@color/backBlue"
                android:textSize="13dp">


            </androidx.appcompat.widget.AppCompatTextView>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="45dp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/mobileSignUpImage"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:clickable="true"
                    android:src="@drawable/pin"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck">


                </androidx.appcompat.widget.AppCompatImageView>


                <TextView
                    android:id="@+id/mobileSIgnUpText"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="Sign In"
                    android:textColor="@color/BlueishBlack"
                    tools:ignore="TouchTargetSizeCheck">


                </TextView>

            </androidx.appcompat.widget.LinearLayoutCompat>


            <TextView
                android:id="@+id/registerText"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                android:fontFamily="@font/robobold"
                android:gravity="center"
                android:text="Don't have an account ??. Sign Up"
                android:textAlignment="center"
                android:textSize="15sp"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>