<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="1dp"
    android:clickable="true"
    android:backgroundTint="#ffffff"
    android:background="#ffffff"
    android:contextClickable="true"
    android:layout_gravity="center_horizontal"
    android:layout_height="570dp">

    <androidx.cardview.widget.CardView
        android:backgroundTint="#ffffff"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="RtlCompat">


        <LinearLayout
            android:id="@+id/TitleId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <LinearLayout

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/tabItem"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="2dp"
                    android:clickable="true"
                    android:src="@drawable/ic_sirocco_icon"
                    tools:ignore="RtlCompat" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/memeName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robobold"
                        android:layout_marginEnd="12dp"
                        android:layout_marginStart="2dp"
                        android:clickable="true"
                        android:textColor="@color/BlueishBlack"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:orientation="horizontal"
                        tools:ignore="RtlCompat">

                        <TextView
                            android:id="@+id/postTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:fontFamily="@font/robobold"
                            android:layout_marginStart="2dp"
                            android:clickable="true"
                            android:ellipsize="end"
                            android:scrollHorizontally="true"
                            android:textColor="@color/BlueishBlack"
                            android:textSize="8sp"
                            android:textStyle="bold"
                            tools:ignore="RtlCompat" />


                        <TextView
                            android:id="@+id/postPosition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:ellipsize="end"
                            android:lines="1"
                            android:fontFamily="@font/robobold"
                            android:scrollHorizontally="true"
                            android:textColor="@color/BlueishBlack"
                            android:textSize="8sp"
                            android:textStyle="bold"
                            tools:ignore="RtlCompat" />

                    </LinearLayout>

                </LinearLayout>





            </LinearLayout>


            <TextView
                android:id="@+id/sirocco_brand_antique"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:gravity="center"
                android:fontFamily="@font/yogamedium"
                android:layout_gravity="center"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:textStyle="bold"
                android:text="Brand Antique "
                android:textColor="@color/EndBlue"
                android:textSize="24sp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:contextClickable="true"
                android:gravity="center">

                <ImageView
                    android:id="@+id/sirocco_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/for_gallery_pic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="115dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentBottom="true"
                    android:backgroundTint="#55000000"
                    android:background="#55000000"
                    android:layout_alignParentStart="true"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:orientation="vertical"
                    tools:ignore="RtlCompat">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="#55000000"

                        android:layout_height="110dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginTop="5dp"
                            android:backgroundTint="#55000000"
                            android:clickable="true"
                            android:contextClickable="true"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:backgroundTint="#55000000"
                                android:paddingRight="3dp">

                                <ImageView
                                    android:id="@+id/profileNameIcon"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_marginStart="7dp"
                                    android:clickable="true"
                                    android:contextClickable="true"
                                    android:paddingLeft="3dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/shirt" />

                                <TextView
                                    android:id="@+id/sirocco_brand_model"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="#55000000"
                                    android:fontFamily="@font/robobold"
                                    android:layout_marginStart="2dp"
                                    android:contextClickable="true"
                                    android:text="Full Name"
                                    android:textColor="#ffffff"
                                    android:textSize="25sp"
                                    android:textStyle="bold"
                                    tools:ignore="RtlCompat" />



                            </LinearLayout>

                            <LinearLayout

                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:clickable="true"
                                android:backgroundTint="#55000000"
                                android:contextClickable="true"
                                android:orientation="horizontal"
                                android:paddingRight="3dp">

                                <ImageView
                                    android:id="@+id/profileNameIcon_link"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_marginStart="7dp"
                                    android:clickable="true"
                                    android:contextClickable="true"
                                    android:paddingLeft="3dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/link" />


                                <TextView

                                    android:id="@+id/modellink"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/robobold"
                                    android:backgroundTint="#55000000"
                                    android:layout_marginStart="2dp"
                                    android:layout_marginEnd="3dp"
                                    android:clickable="true"
                                    android:contextClickable="true"
                                    android:gravity="center_vertical"
                                    android:text="link..***http/:"
                                    android:textColor="@color/bluelight"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    tools:ignore="RtlCompat" />



                                <ImageView
                                    android:id="@+id/siroccoItemStore"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_marginTop="8dp"
                                    android:clickable="true"
                                    android:src="@drawable/sale">

                                </ImageView>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>