<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="12dp"
    android:background="@drawable/bg_item"
    android:id="@+id/primaryItem"
    android:layout_margin="10dp"
    android:orientation="horizontal"
    android:layout_height="60dp">

    <androidx.cardview.widget.CardView
        android:layout_width="35dp"
        app:cardCornerRadius="5dp"
        android:layout_height="35dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/profileServiceImage"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/tag_siroco"
                android:layout_height="match_parent">



            </ImageView>

            <ProgressBar
                android:id="@+id/progress_circle_user_memes"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true">


            </ProgressBar>


        </RelativeLayout>





    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="Category"
            android:id="@+id/profileServiceCategory"
            android:fontFamily="@font/yogamedium"
            android:textColor="@color/EndBlue"
            android:textSize="15sp"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:text="Status"
            android:id="@+id/profileServiceCategoryDescription"
            android:fontFamily="@font/yogamedium"
            android:textColor="@color/primaryDark"
            android:textSize="10sp"
            android:lines="1"
            android:layout_height="wrap_content">

        </TextView>


    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>