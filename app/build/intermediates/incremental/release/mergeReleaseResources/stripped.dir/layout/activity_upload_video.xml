<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/colorPrimary"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".ActivityUploadImage">

    <include
        android:id="@+id/chatbarLayout"
        layout="@layout/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="35dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp"
        android:orientation="vertical"
        android:padding="4dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/chosenTitleEdit">


                <VideoView
                    android:id="@+id/ChosenFilename"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:screenReaderFocusable="true" />

                <ImageView
                    android:id="@+id/ChosenFilenamImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_weight="20"
                    android:clickable="true"
                    android:padding="10dp"
                    android:screenReaderFocusable="true"
                    android:src="@drawable/media" />

                <ProgressBar
                    android:id="@+id/progress_circle_upload"
                    android:layout_width="65dp"
                    android:layout_height="64dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#55000000"
                    android:background="#55000000"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:orientation="horizontal"
                    android:paddingRight="10dp">

                    <ImageView
                        android:id="@+id/writeStatus"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:foreground="?android:selectableItemBackground"
                        android:src="@drawable/pagiis_logo_final" />


                    <com.google.android.material.textfield.TextInputEditText

                        android:id="@+id/chosenTitleEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:background="#55000000"
                        android:backgroundTint="#55000000"
                        android:clickable="true"
                        android:contextClickable="true"
                        android:ellipsize="end"
                        android:fontFamily="@font/yogamedium"
                        android:gravity="center"
                        android:hint="type.."
                        android:lines="1"
                        android:paddingRight="10dp"
                        android:scrollHorizontally="true"
                        android:textColorHighlight="@color/EndBlue"
                        android:textColorHint="@color/EndBlue" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/uploadChosenFile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                android:background="@color/grayliggt"
                android:backgroundTint="@color/grayliggt"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground"
                android:src="@drawable/click_one" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/goToUploads"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:fabSize="normal"
            android:layout_alignParentEnd="true"
            android:foregroundGravity="center"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp"
            android:backgroundTint="@color/colorPrimary"
            android:clickable="true"
            android:src="@drawable/media" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>