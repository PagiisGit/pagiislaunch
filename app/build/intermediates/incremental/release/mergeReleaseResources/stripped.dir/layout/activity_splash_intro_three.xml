<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/BlueishBlack"
    android:layout_height="match_parent"
    tools:context=".SplashIntroThree">

    <ImageView
        android:layout_width="215dp"
        android:layout_height="185dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:src="@drawable/ic_sirocco_icon" />



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="395dp"
        app:cardCornerRadius="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="230dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/LemonChaffon"
            android:backgroundTint="@color/LemonChaffon"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:clickable="true"
                android:contextClickable="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/views"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:src="@drawable/star_rate" />

                <ImageView
                    android:id="@+id/pagiis_radius_friends"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:src="@drawable/cart" />

                <ImageView
                    android:id="@+id/pagiis_radius_chat"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:src="@drawable/bill_exchange" />


            </LinearLayout>


            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/follow_button_background"
                android:backgroundTint="@color/grayliggt"
                android:fontFamily="@font/yogamedium"
                android:gravity="center"
                android:text="REAL-TIME ONLINE MARKETING AND ONLINE SHOPPING PLATFORM"
                android:textColor="@color/BlueishBlack"
                android:textSize="11sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="81dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:clickable="true"
                android:contextClickable="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:src="@drawable/art" />

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="30dp"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:src="@drawable/fashion_r" />

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="30dp"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:src="@drawable/music_cloud" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/viewers"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:fontFamily="@font/yogamedium"
                    android:layout_gravity="center"
                    android:background="@drawable/follow_button_background"
                    android:backgroundTint="@color/grayliggt"
                    android:gravity="center"
                    android:text="Art"
                    android:textColor="@color/Orrnge"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:fontFamily="@font/yogamedium"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/follow_button_background"
                    android:backgroundTint="@color/grayliggt"
                    android:gravity="center"
                    android:text="Fashion"
                    android:textColor="@color/Orrnge"
                    android:textSize="7sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/chats"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:fontFamily="@font/yogamedium"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/follow_button_background"
                    android:backgroundTint="@color/grayliggt"
                    android:gravity="center"
                    android:text="Music"
                    android:textColor="@color/Orrnge"
                    android:textSize="7sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:contextClickable="true"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:src="@drawable/business" />

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="60dp"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:src="@drawable/shop" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:background="@drawable/follow_button_background"
                    android:backgroundTint="@color/grayliggt"
                    android:gravity="center"
                    android:fontFamily="@font/yogamedium"
                    android:text="Business"
                    android:textColor="@color/Orrnge"
                    android:textSize="7sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="60dp"
                    android:background="@drawable/follow_button_background"
                    android:backgroundTint="@color/grayliggt"
                    android:gravity="center"
                    android:fontFamily="@font/yogamedium"
                    android:text="Online Shop"
                    android:textColor="@color/Orrnge"
                    android:textSize="7sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>



    </androidx.cardview.widget.CardView>





    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contextClickable="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="11dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/skipOne"
            android:clickable="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/pagiis_logo_final" />

        <ImageView
            android:id="@+id/skipTwo"
            android:clickable="true"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_sirocco_icon" />


    </LinearLayout>

</RelativeLayout>