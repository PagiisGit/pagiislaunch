<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:backgroundTint="@color/lightOrrnge"
    android:layout_height="wrap_content"
    tools:context=".BoughtItemMaxView">


    <include
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        layout = "@layout/app_bar_layout"
        android:id="@+id/chatbarLayout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="741dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="561dp"
            android:layout_marginTop="35dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="7dp"
                android:layout_marginBottom="130dp"
                android:background="@color/BlueishBlack"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/yogamedium"
                    android:textStyle="bold"
                    android:background="@color/BlueishBlack"
                    android:backgroundTint="@color/BlueishBlack"
                    android:gravity="center"
                    android:text="item purchase details **"
                    android:textColor="@color/Orrnge" />


                <ImageView
                    android:id="@+id/ChooseSlip"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:gravity="center"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_add_profile" />


                <ImageView
                    android:id="@+id/verifySlip"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:gravity="center"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_save" />


                <ImageView
                    android:id="@+id/OnlineShopReceipt"
                    android:layout_width="51dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:gravity="center"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bill" />


                <ImageView
                    android:id="@+id/OnlineShop"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="26dp"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:gravity="center"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/openshop_one" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/SirrocoMaxProgressBar"
                android:layout_width="75dp"
                android:layout_height="61dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="151dp" />

            <ImageView
                android:id="@+id/originalPic"
                android:layout_width="37dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="-50dp"
                android:layout_toEndOf="@+id/sale"
                android:foreground="?android:selectableItemBackground"
                android:src="@drawable/previous" />


            <ImageView
                android:id="@+id/SirrocoMaxProfile"
                android:layout_width="370dp"
                android:layout_marginStart="20dp"
                android:layout_height="330dp"
                android:layout_below="@+id/originalPic"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/cart" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="35dp"
                android:background="@color/cardview_light_background"
                android:backgroundTint="@color/cardview_light_background"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal"
                    android:paddingLeft="7dp">

                    <ImageView
                        android:id="@+id/profileNameIcon"
                        android:layout_width="36dp"
                        android:layout_height="40dp"
                        android:src="@drawable/shirt" />

                    <TextView
                        android:id="@+id/profileNameTextModel"
                        android:layout_width="230dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:clickable="true"
                        android:contextClickable="true"
                        android:foreground="?android:selectableItemBackground"
                        android:linksClickable="true"
                        android:text=" worn by :"
                        android:textColor="@color/AlertRed"
                        android:textSize="10sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/siroccoMaxView"
                        android:layout_width="35dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:gravity="center"
                        android:text="reviewed"
                        android:textColor="@color/AlertRed"
                        android:textSize="7sp"
                        android:textStyle="bold" />


                    <ImageView
                        android:id="@+id/profileProffessionThree"
                        android:layout_width="45dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginRight="10dp"
                        android:clickable="true"
                        android:src="@drawable/viewers" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal"
                    android:paddingLeft="7dp">

                    <ImageView
                        android:id="@+id/profileEmail"
                        android:layout_width="36dp"
                        android:layout_height="40dp"
                        android:src="@drawable/tag" />

                    <TextView
                        android:id="@+id/profileEmailTextBrand"
                        android:layout_width="230dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:contextClickable="true"
                        android:foreground="?android:selectableItemBackground"
                        android:linksClickable="true"
                        android:text="  brand name :"
                        android:textColor="@color/AlertRed"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/siroccoMaxLikes"
                        android:layout_width="35dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:gravity="center"
                        android:text="Verified"
                        android:textColor="@color/AlertRed"
                        android:textSize="7sp"
                        android:textStyle="bold" />


                    <ImageView
                        android:id="@+id/profileProffessionTwo"
                        android:layout_width="45dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:clickable="true"
                        android:foreground="?android:selectableItemBackground"
                        android:src="@drawable/handshake" />

                </LinearLayout>


            </LinearLayout>


            <ImageView
                android:id="@+id/sale"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="73dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/star_rate" />


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/deliveryInforView"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:background="@color/Orrnge"
            android:backgroundTint="@color/Orrnge"
            android:contextClickable="true"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="horizontal"
            android:padding="2dp">


            <Button
                android:id="@+id/readyForDelivery"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:backgroundTint="@color/AlerLime"
                android:background="@drawable/follow_button_background"
                android:gravity="center"
                android:text="Ready for Delivery "
                android:textColor="@color/AlertRed"
                android:textSize="14sp"
                android:textStyle="bold">

            </Button>


            <ImageView
                android:layout_width="70dp"
                android:layout_height="59dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="25dp"
                android:gravity="center"
                android:src="@drawable/location_truck" />

            <LinearLayout
                android:layout_width="180dp"
                android:clickable="true"
                android:contextClickable="true"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/DeliverylocationButton"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:clickable="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/placeholder">

                </ImageView>


                <TextView
                    android:id="@+id/deliveryLocationTextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:ellipsize="end"
                    android:lines="2"
                    android:scrollHorizontally="true"
                    android:contextClickable="true"
                    android:src="@drawable/placeholder"
                    android:textSize="12sp"
                    android:text="Delivery Location"
                    android:textColor="@color/AlertRed"
                    android:textStyle="bold">

                </TextView>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="21dp"
            android:orientation="horizontal"
            android:paddingLeft="25dp">

            <TextView
                android:id="@+id/profileProffessionText"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="270dp"
                android:gravity="center"
                android:text="Powered by"
                android:textSize="7sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/profileProffession"
                android:layout_width="26dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:clickable="true"
                android:gravity="center"
                android:src="@drawable/pagiis_logo_final" />


        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>