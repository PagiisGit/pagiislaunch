<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LemonChaffon"
    android:orientation="vertical"
    tools:context=".ActivityOwnProfile">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="360dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/goBackArrow"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:src="@drawable/previous" />

            <TextView
                android:id="@+id/profileUSerName"
                android:layout_width="300dp"
                android:layout_height="56dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:background="@drawable/follow_button_background"
                android:backgroundTint="@color/Orrnge"
                android:gravity="center"
                android:text="UserName"
                android:textColor="@color/BlueishBlack"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/viewfrom_maps_ImageView"
                    android:layout_width="220dp"
                    android:layout_height="200dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="13dp"
                    android:background="@drawable/text_view_boader_orrnge"
                    android:src="@drawable/bankit" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/declineRequest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="50dp"
                    android:layout_marginRight="91dp"
                    android:backgroundTint="@color/BlueishBlack"
                    android:src="@drawable/user" />

            </RelativeLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lightOrrnge"
                android:orientation="vertical"
                android:weightSum="3">

                <TextView
                    android:layout_width="241dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="Store Bank Details "
                    android:textColor="@color/AlertRed"
                    android:textSize="26sp"
                    android:textStyle="bold">


                </TextView>


            </LinearLayout>


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="180dp">

        </androidx.cardview.widget.CardView>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp">

            <ImageView
                android:id="@+id/profileNameIcon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:clickable="true"
                android:contextClickable="true"
                android:src="@drawable/user"/>

            <TextView
                android:id="@+id/profileNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:paddingLeft="10dp"
                android:text="Full Name"
                android:textColor="@color/AlertRed"
                android:textStyle="bold"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp">

            <ImageView
                android:id="@+id/profileEmail"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/email_contact"/>

            <TextView
                android:id="@+id/profileEmailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:paddingLeft="10dp"
                android:text="email address"
                android:textColor="@color/AlertRed"
                android:textStyle="bold"/>
        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp">

            <ImageView
                android:id="@+id/profileMobile"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/online_payment"/>

            <TextView
                android:id="@+id/profileMobileText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:paddingLeft="10dp"
                android:text="mobile bank number"
                android:textColor="@color/AlertRed"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp">

            <ImageView
                android:id="@+id/profileProffession"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:clickable="true"
                android:src="@drawable/bank"/>

            <TextView
                android:id="@+id/profileProffessionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:paddingLeft="10dp"
                android:text="Bank"
                android:textColor="@color/AlertRed"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/mapsAddFriendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/follow_button_background"
        android:backgroundTint="@color/BlueishBlack"
        android:clickable="true"
        android:contextClickable="true"
        android:text="Visit STORE"
        android:textColor="@color/Orrnge"
        android:textColorHint="@color/Orrnge"
        android:textSize="16dp"/>

</LinearLayout>