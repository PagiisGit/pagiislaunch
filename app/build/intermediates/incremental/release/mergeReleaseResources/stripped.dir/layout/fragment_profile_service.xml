<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pagiisnet.pagiisnet.profile_service">



    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_height="match_parent">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="38dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/EndBlue"
            android:fontFamily="@font/yogamedium"
            android:gravity="center_horizontal"
            android:textSize="30sp"
            android:layout_height="wrap_content"
            android:text="Your service tag" />

        <TextView
            android:layout_width="match_parent"
            android:layout_marginBottom="30dp"
            android:textColor="@color/primaryDark"
            android:fontFamily="@font/yogamedium"
            android:gravity="center_horizontal"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:text="By selecting which service you offer will allow users to find your profile whenever they search for the service you have selected. " />


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:background="@drawable/bg_item"
            android:id="@+id/serviceItemListRecyclerView"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_height="400dp">


        </androidx.recyclerview.widget.RecyclerView>


        <Button
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_background_popup"
            android:clickable="true"
            android:text="Next"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:ignore="TouchTargetSizeCheck">

        </Button>

        <Button
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_background_popup_cancel"
            android:clickable="true"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:ignore="TouchTargetSizeCheck">


        </Button>



    </androidx.appcompat.widget.LinearLayoutCompat>



</FrameLayout>