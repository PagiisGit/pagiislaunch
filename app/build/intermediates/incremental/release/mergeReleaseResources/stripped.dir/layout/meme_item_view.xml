<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:contextClickable="true"
    android:clickable="true"
    android:foreground="?android:selectableItemBackground"
    android:layout_height="400dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:padding="3dp">

        <LinearLayout
            android:id="@+id/TitleId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/user_item_view_profilepic"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="3dp"
                    android:src="@drawable/pagiis_logo_final" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/memeName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:layout_marginStart="2dp"
                        android:clickable="true"
                        android:textColor="@color/BlueishBlack"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/postTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:layout_marginStart="2dp"
                            android:clickable="true"
                            android:ellipsize="end"
                            android:scrollHorizontally="true"
                            android:textColor="@color/BlueishBlack"
                            android:textSize="5sp"
                            android:textStyle="bold"
                            tools:ignore="RtlCompat" />


                        <TextView
                            android:id="@+id/postPosition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:ellipsize="end"
                            android:lines="1"
                            android:scrollHorizontally="true"
                            android:textColor="@color/BlueishBlack"
                            android:textSize="5sp"
                            android:textStyle="bold"
                            tools:ignore="RtlCompat" />

                    </LinearLayout>

                </LinearLayout>

                </LinearLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:contextClickable="true"
                android:layout_marginTop="3dp"
                android:padding="5dp"
                android:scaleType="centerCrop">


                <io.github.ponnamkarthik.richlinkpreview.RichLinkView
                    android:id="@+id/memeImageViewLink"
                    android:layout_width="match_parent"
                    android:layout_height="310dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:focusable="true"
                    android:foregroundGravity="center"
                    android:padding="5dp"
                    android:scaleType="centerCrop" />


                <ImageView
                    android:id="@+id/memeImageView"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/for_gallery_pic" />

                <ImageView
                    android:layout_marginTop="5dp"
                    android:id="@+id/likes"
                    android:clickable="true"
                    android:focusable="true"
                    android:backgroundTint="@color/BlueishBlack"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_like_it" />

                <TextView
                    android:id="@+id/likesText"
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="17dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/DarkGreen"
                    android:textSize="12sp" />


            </RelativeLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="3dp"
                android:clickable="true"
                android:contextClickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/views"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:src="@drawable/viewers" />

                <ImageView
                    android:id="@+id/pagiis_radius_friends"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:clickable="true"
                    android:src="@drawable/location_group" />

                <ImageView
                    android:id="@+id/pagiis_radius_chat"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:clickable="true"
                    android:src="@drawable/location_based_chat" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:id="@+id/viewers"
                    android:layout_width="25dp"
                    android:layout_height="12dp"
                    android:gravity="center"
                    android:text="views"
                    android:textColor="@color/AlertRed"
                    android:textSize="8sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_marginStart="20dp"
                    android:textStyle="bold"
                    android:id="@+id/share"
                    android:layout_width="25dp"
                    android:layout_height="12dp"
                    android:gravity="center"
                    android:text="share"
                    android:textColor="@color/AlertRed"
                    android:textSize="8sp" />

                <TextView
                    android:layout_marginStart="20dp"
                    android:textStyle="bold"
                    android:id="@+id/chats"
                    android:layout_width="25dp"
                    android:layout_height="12dp"
                    android:gravity="center"
                    android:text="chats"
                    android:textSize="8sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>
