<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="3dp"
    android:background="#55000000"
    android:layout_gravity="center_horizontal"
    android:backgroundTint="@color/BlueishBlack"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="#55000000"
        android:orientation="vertical"
        android:backgroundTint="@color/BlueishBlack"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/signOutText"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="Sign-Out"
            android:fontFamily="@font/pumpstd"
            android:textColor="@color/AlerLime"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <ImageView
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:id="@+id/SignOutImage"
                android:backgroundTint="@color/AlerLime"
                android:src="@drawable/ic_save"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <ImageView

                android:layout_marginTop="3dp"
                android:id="@+id/cancelSignOutImage"
                android:layout_marginBottom="3dp"
                android:backgroundTint="@color/AlertRed"
                android:layout_marginStart="50dp"
                android:src="@drawable/ic_action_cloase_red"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>