<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:contextClickable="true"
    android:clickable="true"
    android:foreground="?android:selectableItemBackground"
    android:layout_height="350dp"
    android:layout_margin="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:padding="3dp">

        <LinearLayout
            android:id="@+id/TitleId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <ImageView
                    android:src="@drawable/pagiis_logo_final"
                    android:background="@drawable/orrnge_text_background_view"
                    android:id="@+id/user_item_view_profilepic"
                    android:layout_marginStart="7dp"
                    android:layout_gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

                <TextView
                    android:id="@+id/memeName"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="3dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="title"
                    android:textAlignment="center"
                    android:textColor="@color/AlertRed"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:src="@drawable/for_gallery_pic"
                android:id="@+id/memeImageView"
                android:layout_width="350dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_marginTop="7dp"
                android:padding="5dp"
                android:scaleType="centerCrop" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>