<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnChatting">


    <include
        android:layout_width="match_parent"
        android:layout_height="35dp"
        layout = "@layout/app_bar_layout"
        android:id="@+id/chatbarLayout"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messagesRecyclerView"
        android:layout_below="@id/chatbarLayout"
        android:layout_above="@+id/textInputLayout"
        android:layout_marginBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UnknownId">

    </androidx.recyclerview.widget.RecyclerView>

    <ImageView
        android:layout_marginTop="3dp"
        android:id="@+id/imagePicker"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_image_picker"
        android:layout_alignParentBottom="true"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true" />


    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginStart="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="3dp"
        android:background="@drawable/text_view_boarder"
        android:id="@+id/textInputLayout"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        tools:ignore="UnknownId"
        android:layout_marginLeft="50dp">

        <EditText
            android:paddingLeft="8dp"
            android:id="@+id/textInputField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="type message ..."
            android:textColor="@color/SquareBack" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:foregroundGravity="center"
        android:backgroundTint="@color/Orrnge_R"
        android:id="@+id/sendIcon"
        android:src="@drawable/ic_send"
        android:layout_width="56dp"
        android:layout_marginBottom="4dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />


</RelativeLayout>