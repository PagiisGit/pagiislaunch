<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/SplashIntroReativelayout"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@color/LemonChaffon"
    android:clickable="true"
    tools:context=".SplashIntroOne">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/welcomeTGext"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/pumpstd"
            android:gravity="center"
            android:text="Welcome"
            android:textColor="@color/BlueishBlack"
            android:textSize="40sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/pumpstd"
            android:gravity="center"
            android:text="to"
            android:textColor="@color/BlueishBlack"
            android:textSize="25sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/pumpstd"
            android:gravity="center"
            android:text=" Pagiis  -x-  Sirocco"
            android:textColor="@color/BlueishBlack"
            android:textSize="35sp"
            android:textStyle="normal" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="157dp"
        android:layout_height="69dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="183dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/pagiis_logo_final" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_sirocco_icon" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/follow_button_background"
            android:backgroundTint="@color/grayliggt"
            android:fontFamily="@font/yogamedium"
            android:text="PUBLIC NETWORK AND ADVERTISEMENT PLATFORM."
            android:textColor="@color/SquareBack"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:background="@color/white_lemmon_chaffon"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/yogamedium"
                android:text="PAGiiS x SIROCCO  is Designed and Created for both public social and Advertisement purposes. The platform intergrates two of the most influential ways of data capturing and sharing, PAGiiS being the (*Networking House*) and Sirocco being the (*Online Shopping and Advertisement House). These two platfroms aims to serve and deliver valuable user information to and from the public in a most effective and secured way, thus improving the present and future technoogical and internet-based user interactions. All present and future projects ideas are solemly that of the founders and the developers of the platfrom. The platform development with time will reveal more of the features that will help and grow the platfrom into almost what the founders and the developers foresee as the future of not just apps, but the future of a new world age where information can litterally be found at the tip of our fingers from anyone to anyone else around the world.

                                        Founder: MR. ML MLAMBO     Co-Founder: MR. SA NGUBANE"
                android:textColor="@color/BlueishBlack"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/yogamedium"
            android:text="  Founder: MR. ML MLAMBO"
            android:textColor="@color/BlueishBlack"
            android:textSize="10sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/yogamedium"
            android:text="  Co-Founder: MR. SA NGUBANE"
            android:textColor="@color/BlueishBlack"
            android:textSize="10sp" />


        <TextView
            android:id="@+id/skip"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/follow_button_background"
            android:backgroundTint="@color/grayliggt"
            android:clickable="true"
            android:fontFamily="@font/yogamedium"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="next>>"
            android:textColor="@color/BlueishBlack"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>





</RelativeLayout>