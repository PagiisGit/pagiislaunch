<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SirrocoImageUpload"
    android:orientation="vertical"
    android:weightSum="10">

    <include
        android:layout_width="match_parent"
        android:layout_height="35dp"
        layout = "@layout/app_bar_layout"
        android:id="@+id/chatbarLayout"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:padding="4dp">


        <LinearLayout
            android:gravity="center"
            android:paddingLeft="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <ImageView
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:id="@+id/profileProffession"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_write"/>

            <com.google.android.material.textfield.TextInputEditText

                android:background="@drawable/orrnge_text_background_view"
                android:id="@+id/chosenTitleEdit"
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:layout_height="20dp"
                android:textSize="10sp"
                android:clickable="true"
                android:contextClickable="true"
                android:gravity="center"
                android:hint="Brand title"
                android:textColorHighlight="@color/SquareBack" />



            <ImageView
                android:layout_marginStart="20dp"
                android:clickable="true"
                android:layout_gravity="center_vertical"
                android:id="@+id/profile"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_model_icon"/>

            <com.google.android.material.textfield.TextInputEditText

                android:background="@drawable/orrnge_text_background_view"
                android:id="@+id/chosenTitleModel"
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:layout_height="20dp"
                android:textSize="10sp"
                android:clickable="true"
                android:contextClickable="true"
                android:gravity="center"
                android:hint="Worn by :"
                android:textColorHighlight="@color/SquareBack" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/chosenTitleEdit"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/ChosenFilename"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_weight="20"
                    android:clickable="true"
                    android:padding="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/for_gallery_pic" />

                <ProgressBar
                    android:id="@+id/progress_circle_upload"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center" />


            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:foreground="?android:selectableItemBackground"
            android:id="@+id/uploadChosenFileBack"
            android:clickable="true"
            android:layout_width="65dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_height="50dp">

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:id="@+id/uploadChosenFile"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/colorAccent"
                android:clickable="true"
                android:src="@drawable/ic_cloud_upload" />

        </androidx.cardview.widget.CardView>


        <ImageView
            android:id="@+id/goToUploads"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/uploadChosenFileBack"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="4dp"
            android:clickable="true"
            android:src="@drawable/music" />

        <ImageView
            android:id="@+id/goToUploadsHeadlines"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/uploadChosenFileBack"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="4dp"
            android:clickable="true"
            android:src="@drawable/ic_file_uploader" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/goToMusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="120dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="#FFFFFF"
            android:clickable="true"
            android:src="@drawable/ic_notifications"
            app:fabCustomSize="50dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>