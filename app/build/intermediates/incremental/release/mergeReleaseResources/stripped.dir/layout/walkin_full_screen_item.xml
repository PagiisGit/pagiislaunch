<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    app:cardCornerRadius="15dp"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/LemonChaffon"
    android:layout_height="490dp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:backgroundTint="@color/LemonChaffon"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/walkinItemView"
                android:layout_width="320dp"
                android:layout_height="280dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/video_camera">

            </ImageView>

            <TextView
                android:id="@+id/walkinItemViewText"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:text="Pagiis"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold"
                android:ellipsize="end"
                android:fontFamily="@font/yogamedium"
                android:lines="2"
                android:scrollHorizontally="true"
                android:backgroundTint="@color/bluelight"
                android:textColor="@color/AlertRed"
                android:layout_marginTop="20dp"
                android:background="@drawable/follow_button_background"
                android:layout_gravity="center"
                android:layout_height="55dp">


            </TextView>


            <LinearLayout
                android:id="@id/canvasId"
                android:layout_width="157dp"
                android:layout_height="69dp"
                android:clickable="true"
                android:contextClickable="true"
                android:background="@color/lightOrrnge"
                android:layout_gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ii"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/astronaut" />

                <ImageView
                    android:id="@+id/cc"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:src="@drawable/business_startup" />


            </LinearLayout>



        </LinearLayout>





    </androidx.cardview.widget.CardView>




</androidx.cardview.widget.CardView>