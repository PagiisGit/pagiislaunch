<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/BlueishBlack"
    android:layout_height="match_parent"
    tools:context=".SplashIntroTwo">


    <pl.droidsonroids.gif.GifImageView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:layout_height="wrap_content"
        android:src="@drawable/pagiis_splash_logo_edit_final_r_file"/>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="395dp"
        app:cardCornerRadius="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="230dp">


        <LinearLayout
            android:backgroundTint="@color/LemonChaffon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#fff"
            android:orientation="vertical">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:clickable="true"
                android:contextClickable="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/views"
                    android:layout_width="16dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:src="@drawable/viewers" />

                <ImageView
                    android:id="@+id/pagiis_radius_friends"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:src="@drawable/location_group" />

                <ImageView
                    android:id="@+id/pagiis_radius_chat"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:src="@drawable/location_based_chat" />


            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/yogamedium"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/follow_button_background"
                android:backgroundTint="@color/grayliggt"
                android:text="REAL-TIME  USER-LOCATION-RADIUS DATA CAPTURING"
                android:textColor="@color/BlueishBlack"
                android:textSize="11sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="81dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:clickable="true"
                android:contextClickable="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="69dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:src="@drawable/pin" />

                <ImageView
                    android:layout_width="66dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="30dp"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:src="@drawable/location" />

                <ImageView
                    android:layout_width="69dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="30dp"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:src="@drawable/network" />


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/viewers"
                    android:layout_width="55dp"
                    android:fontFamily="@font/yogamedium"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:background="@drawable/follow_button_background"
                    android:backgroundTint="@color/grayliggt"
                    android:gravity="center"
                    android:text="User Location"
                    android:textColor="@color/BlueishBlack"
                    android:textSize="7sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/share"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="40dp"
                    android:background="@drawable/follow_button_background"
                    android:backgroundTint="@color/grayliggt"
                    android:gravity="center"
                    android:fontFamily="@font/yogamedium"
                    android:text="Notifications"
                    android:textColor="@color/SquareBack"
                    android:textSize="7sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/chats"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="40dp"
                    android:background="@drawable/follow_button_background"
                    android:backgroundTint="@color/grayliggt"
                    android:gravity="center"
                    android:fontFamily="@font/yogamedium"
                    android:text="Online-Users"
                    android:textColor="@color/SquareBack"
                    android:textSize="7sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:clickable="true"
                android:contextClickable="true"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="91dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:background="@color/LemonChaffon"
                    android:backgroundTint="@color/LemonChaffon"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:src="@drawable/pagiis_go_internet" />

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="60dp"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:src="@drawable/pagiis_onlineusers_finder" />


            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:background="@drawable/follow_button_background"
                    android:backgroundTint="@color/grayliggt"
                    android:gravity="center"
                    android:fontFamily="@font/yogamedium"
                    android:text="User Posts"
                    android:textColor="@color/SquareBack"
                    android:textSize="7sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="85dp"
                    android:background="@drawable/follow_button_background"
                    android:backgroundTint="@color/grayliggt"
                    android:gravity="center"
                    android:fontFamily="@font/yogamedium"
                    android:text="Places + events"
                    android:textColor="@color/BlueishBlack"
                    android:textSize="7sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>




    <LinearLayout
        android:layout_width="82dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="12dp"
        android:clickable="true"
        android:contextClickable="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/skipOne"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:clickable="true"
            android:src="@drawable/pagiis_logo_final" />

        <ImageView
            android:id="@+id/skipTwo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:clickable="true"
            android:src="@drawable/ic_sirocco_icon" />


    </LinearLayout>

</RelativeLayout>