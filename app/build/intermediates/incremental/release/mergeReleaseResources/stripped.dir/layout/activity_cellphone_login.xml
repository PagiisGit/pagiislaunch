<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5500"
        android:backgroundTint="@color/bluelight">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="77dp"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:paddingLeft="20dp"
                android:foregroundGravity="center"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_phonelink_ring" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="280dp"
            android:gravity="center"
            android:orientation="vertical">


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <com.hbb20.CountryCodePicker
                    android:id="@+id/countryCodePicker"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    app:ccpDialog_showNameCode="true"
                    app:ccpDialog_showPhoneCode="true"
                    app:ccp_autoDetectCountry="true"
                    app:ccp_defaultNameCode="ZA"
                    app:ccp_showNameCode="true"
                    app:ccp_showPhoneCode="true">

                </com.hbb20.CountryCodePicker>


                <EditText
                    android:id="@+id/loginNumber"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/follow_button_background"
                    android:backgroundTint="#fff"
                    android:fontFamily="@font/robobold"
                    android:hint="cellphone"
                    android:inputType="textEmailAddress"
                    android:lines="1"
                    android:paddingLeft="10dp"
                    android:textColor="@color/BlueishBlack"
                    android:textColorHighlight="@color/Orrnge"
                    android:textColorHint="@color/BlueishBlack"
                    android:textSize="15sp"
                    tools:ignore="TouchTargetSizeCheck" />


            </androidx.appcompat.widget.LinearLayoutCompat>


            <Button
                android:id="@+id/buttonLogin"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@drawable/follow_button_background"
                android:backgroundTint="@color/EndBlue"
                android:fontFamily="@font/robobold"
                android:text="SEND OTP "
                android:textColor="@color/BlueishBlack"
                android:textSize="24sp"
                android:textStyle="bold" />


            <ProgressBar
                android:id="@+id/sendOTP"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/robobold"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:text="sending OTP in seconds"
                android:textAlignment="center"
                android:textColor="@color/BlueishBlack"
                android:textSize="15sp"
                tools:ignore="TouchTargetSizeCheck" />


        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>