<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/text_view_boarder"
            android:gravity="center"
            android:text="Pagiis user age required."
            android:textColor="@color/SquareBack"
            android:textSize="22dp" />

        <TextView

            android:layout_width="320dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="Note : false information may cause user difficulties. e.g False age   "
            android:textColor="@color/AlertRed"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center">

            <EditText

                android:id="@+id/AgeEditText"
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="Age :"
                android:textSize="25dp" />

            <ImageView
                android:id="@+id/saveFromDialog"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_save" />


        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>