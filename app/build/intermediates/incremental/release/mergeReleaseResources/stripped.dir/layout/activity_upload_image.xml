<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityUploadImage"
    android:orientation="vertical"
    android:weightSum="10">

    <include

        android:layout_width="match_parent"
        android:layout_height="35dp"
        layout = "@layout/app_bar_layout"
        android:id="@+id/chatbarLayout"/>

    <RelativeLayout
        android:background="@color/LemonChaffon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:padding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/writeStatus"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="3dp"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground"
                android:src="@drawable/pagiis_logo_final" />

            <com.google.android.material.textfield.TextInputEditText

                android:id="@+id/chosenTitleEdit"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/black_text_view_background"
                android:clickable="true"
                android:backgroundTint="#fff"
                android:fontFamily="@font/robobold"
                android:layout_marginStart="10dp"
                android:contextClickable="true"
                android:gravity="start"
                android:textColor="@color/BlueishBlack"
                android:textColorHint="@color/BlueishBlack"
                android:hint="Type"
                android:paddingLeft="5dp"
                android:textColorHighlight="@color/SquareBack" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="525dp"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ChosenFilename"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@color/LemonChaffon"
                android:backgroundTint="@color/LemonChaffon"
                android:clickable="true"
                android:padding="55dp"
                android:scaleType="centerCrop"
                android:src="@drawable/add" />

            <ProgressBar
                android:id="@+id/progress_circle_upload"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center" />


        </androidx.cardview.widget.CardView>




            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/uploadChosenFile"
                android:layout_width="50dp"
                android:layout_marginBottom="15dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_height="50dp"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground"
                android:src="@drawable/click_one" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton

            android:id="@+id/contentRating"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:foreground="?android:selectableItemBackground"
            android:layout_marginStart="3dp"
            android:backgroundTint="#FFFFFF"
            android:src="@drawable/ic_whats_hot"/>

        <ImageView
            android:id="@+id/goToUploads"
            android:layout_width="45dp"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:src="@drawable/gallery" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
