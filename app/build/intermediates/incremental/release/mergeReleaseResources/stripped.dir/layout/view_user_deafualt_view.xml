<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="650dp"
    android:background="@drawable/black_text_view_background"
    android:backgroundTint="#fff"
    android:clickable="true"
    android:contextClickable="true"
    android:foreground="?android:selectableItemBackground"
    tools:targetApi="honeycomb">

    <androidx.cardview.widget.CardView
        android:id="@+id/userMemeCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/LemonChaffon"
        android:backgroundTint="@color/LemonChaffon"
        android:clickable="true"
        android:orientation="vertical"
        tools:ignore="DuplicateClickableBoundsCheck">


        <LinearLayout
            android:id="@+id/TitleId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:clickable="true"
                android:contextClickable="true"
                android:orientation="horizontal">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/user_item_view_profilepic"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:backgroundTint="@color/LemonChaffon"
                    android:clickable="true"
                    android:padding="3dp"
                    android:src="@drawable/pagiis_splash_logo_edit_final_r_file"
                    tools:ignore="SpeakableTextPresentCheck" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/sirocco_brand_model"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:clickable="true"
                        android:fontFamily="@font/robobold"
                        android:textColor="@color/BlueishBlack"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/postTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:clickable="true"
                            android:ellipsize="end"
                            android:fontFamily="@font/robobold"
                            android:scrollHorizontally="true"
                            android:textColor="@color/BlueishBlack"
                            android:textSize="8sp"
                            android:textStyle="bold"
                            tools:ignore="RtlCompat" />


                        <TextView
                            android:id="@+id/postPosition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:ellipsize="end"
                            android:fontFamily="@font/robobold"
                            android:lines="1"
                            android:scrollHorizontally="true"
                            android:textColor="@color/BlueishBlack"
                            android:textSize="8sp"
                            android:textStyle="bold"
                            tools:ignore="RtlCompat" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:contextClickable="true"
                android:foregroundGravity="center"
                android:gravity="center"
                tools:ignore="DuplicateClickableBoundsCheck">


                <io.github.ponnamkarthik.richlinkpreview.RichLinkView
                    android:id="@+id/memeImageViewLink"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="-4dp"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:focusable="true"
                    android:foregroundGravity="center"
                    android:scaleType="centerCrop"
                    tools:ignore="SpeakableTextPresentCheck" />

                <ImageView
                    android:id="@+id/sirocco_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:focusable="true"
                    android:foregroundGravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/for_gallery_pic"
                    tools:ignore="SpeakableTextPresentCheck" />


                <ImageView
                    android:id="@+id/likes"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:backgroundTint="@color/BlueishBlack"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/heart"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/likesText"
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="13dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/DarkGreen"
                    android:textSize="10sp"
                    android:textStyle="bold" />


            </RelativeLayout>


            <LinearLayout
                android:id="@+id/reactingIconsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/reactingLayout"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="2dp"
                android:background="@color/LemonChaffon"
                android:clickable="true"
                android:contextClickable="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/views"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:src="@drawable/viewers"
                    tools:ignore="SpeakableTextPresentCheck" />

                <ImageView
                    android:id="@+id/pagiis_radius_friends"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:src="@drawable/location_group"
                    tools:ignore="RtlCompat,SpeakableTextPresentCheck" />

                <ImageView
                    android:id="@+id/pagiis_radius_chat"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:src="@drawable/location_based_chat"
                    tools:ignore="RtlCompat,SpeakableTextPresentCheck" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_below="@id/reactingIconsLayout"
                android:layout_gravity="center"
                android:background="#FFFFFF"
                android:layout_marginBottom="5dp"
                android:backgroundTint="@color/LemonChaffon"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/viewers"
                    android:layout_width="30dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/robobold"
                    android:gravity="center"
                    android:text="views"
                    android:textColor="@color/EndBlue"
                    android:textSize="9sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/share"
                    android:layout_width="30dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/robobold"
                    android:gravity="center"
                    android:text="share"
                    android:textColor="@color/EndBlue"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/chats"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/robobold"
                    android:gravity="center"
                    android:text="update"
                    android:textColor="@color/AlerLime"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/reactingLayout"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/follow_button_background"
                android:backgroundTint="#FFFFFF"
                android:clickable="true"
                android:contextClickable="true"
                android:orientation="vertical"
                tools:ignore="RtlCompat">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:background="#FFFFFF"
                    android:backgroundTint="#FFFFFF"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/user_name"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="30dp"
                        android:src="@drawable/location"
                        android:text="user_name" />


                    <TextView
                        android:id="@+id/searchedItemDescription"
                        android:layout_width="246dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="2dp"
                        android:layout_marginLeft="5dp"
                        android:background="#FFFFFF"
                        android:ellipsize="end"
                        android:fontFamily="@font/robobold"
                        android:lines="2"
                        android:scrollHorizontally="true"
                        android:text="_@PAGiiS"
                        android:textColor="@color/BlueishBlack"
                        android:textSize="12sp"
                        android:textStyle="normal" />


                </LinearLayout>


                <ImageView
                    android:id="@+id/ripple_button"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="330dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="10dp"
                    android:clickable="true"
                    android:src="@drawable/click_one"
                    tools:ignore="SpeakableTextPresentCheck" />


            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>