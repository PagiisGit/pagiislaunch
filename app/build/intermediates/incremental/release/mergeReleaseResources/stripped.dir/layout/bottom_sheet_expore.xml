<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mapsBottomSheetCOntainer"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:padding="5dp"
        android:id="@+id/popUpDescriptionTextView"
        android:gravity="center"
        android:text="Choose Activity"
        android:fontFamily="@font/robobold"
        android:textColor="@color/colorPrimaryText"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_height="wrap_content">

    </TextView>

    <View
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:background="@color/colorDevider"
        android:layout_height="1dp">
    </View>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="5dp"
            android:layout_height="70dp">

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/robot"
                android:layout_height="match_parent">

            </pl.droidsonroids.gif.GifImageView>




        </androidx.cardview.widget.CardView>


    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">


            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                app:cardCornerRadius="10dp"
                android:contextClickable="true"
                android:layout_margin="10dp"
                android:layout_height="100dp">

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/popUpPostOption"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/upload"
                    tools:ignore="SpeakableTextPresentCheck">

                </pl.droidsonroids.gif.GifImageView>




            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_height="match_parent">


                <TextView
                    android:layout_width="match_parent"
                    android:text="Post"
                    android:id="@+id/popUpDescriptionTextViewTwo"
                    android:textSize="17sp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorPrimaryOne"
                    android:textStyle="bold"
                    android:layout_height="wrap_content">


                </TextView>




            </androidx.appcompat.widget.LinearLayoutCompat>




        </androidx.appcompat.widget.LinearLayoutCompat>



        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">


            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                app:cardCornerRadius="10dp"
                android:contextClickable="true"
                android:layout_margin="10dp"
                android:layout_height="100dp">

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/popUpOnlineShoppingOption"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/store"
                    tools:ignore="SpeakableTextPresentCheck">

                </pl.droidsonroids.gif.GifImageView>




            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_height="match_parent">


                <TextView
                    android:layout_width="match_parent"
                    android:text="Shop online"
                    android:id="@+id/popUpDescriptionTextViewOne"
                    android:textSize="17sp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorPrimaryOne"
                    android:textStyle="bold"
                    android:layout_height="wrap_content">


                </TextView>



            </androidx.appcompat.widget.LinearLayoutCompat>




        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>





    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/colorDevider">

    </View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp"
        tools:ignore="TouchTargetSizeCheck">


        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/shareImageView"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:clickable="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/share_profiles">


        </pl.droidsonroids.gif.GifImageView>


        <TextView
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="25dp"
            android:text="@string/share_via"
            android:textColor="@color/colorPrimaryText"
            android:textSize="19sp">


        </TextView>


    </LinearLayout>


    <Button
        android:id="@+id/exit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/button_background_popup"
        android:clickable="true"
        android:text="Home"
        android:textColor="@color/white"
        android:textSize="15sp"
        tools:ignore="TouchTargetSizeCheck">

    </Button>




</androidx.appcompat.widget.LinearLayoutCompat>