<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/LemonChaffon"
    android:backgroundTint="@color/LemonChaffon"
    android:layout_height="match_parent"
    tools:context=".SiroccoMaxView">


    <include
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        layout = "@layout/app_bar_layout"
        android:id="@+id/chatbarLayout"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="681dp"
        android:foreground="?android:selectableItemBackground"
        android:layout_marginTop="35dp">


        <ImageView
            android:id="@+id/SirrocoMaxProfile"
            android:layout_width="380dp"
            android:layout_height="400dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/lightOrrnge"
            android:backgroundTint="@color/lightOrrnge"
            android:clickable="true"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/for_gallery_pic" />

        <ImageView
            android:id="@+id/OnlineShop"
            android:layout_width="77dp"
            android:layout_height="71dp"
            android:layout_alignEnd="@+id/SirrocoMaxProfile"
            android:layout_alignBottom="@+id/SirrocoMaxProfile"
            android:clickable="true"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/openshop_one" />


        <androidx.cardview.widget.CardView
            android:id="@+id/mapsSearchViewCardView"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_above="@+id/mapsViewCardView"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:layout_marginBottom="35dp"
            android:clipToPadding="false"
            android:layout_marginLeft="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginStart="2dp"
            android:contextClickable="true"
            android:foregroundGravity="center"
            android:orientation="horizontal">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mapsSearchRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/LemonChaffon"
                android:backgroundTint="#fff"
                android:foregroundGravity="center"
                android:orientation="vertical"
                android:padding="1dp">

            </androidx.recyclerview.widget.RecyclerView>

            <ImageView
                android:id="@+id/hideSearchRecyclerView"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignStart="@+id/hideUserRecyclerview"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="340dp"
                android:layout_marginBottom="254dp"
                android:clickable="true"
                android:contextClickable="true"
                android:src="@drawable/previous" />



            <TextView
                android:id="@+id/noSearcFOundText"
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/Orrnge"
                android:layout_height="50dp"
                android:text="There is currently no match for searched content." />

        </androidx.cardview.widget.CardView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginStart="10dp"
            android:clickable="true"
            android:contextClickable="true"
            android:backgroundTint="#fff"
            android:layout_marginEnd="10dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="126dp"
            android:background="@drawable/follow_button_background"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:paddingLeft="25dp">

                <ImageView

                    android:id="@+id/profileNameIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:src="@drawable/shirt" />

                <TextView
                    android:id="@+id/profileNameTextModel"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:linksClickable="true"
                    android:text=" worn by :"
                    android:textColor="@color/AlertRed"
                    android:textSize="14sp"
                    android:textStyle="bold" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:paddingLeft="25dp">

                <ImageView
                    android:id="@+id/profileEmail"
                    android:layout_width="45dp"
                    android:clickable="true"
                    android:layout_gravity="center_vertical"
                    android:layout_height="40dp"
                    android:src="@drawable/tag" />

                <TextView
                    android:id="@+id/profileEmailTextBrand"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:contextClickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:linksClickable="true"
                    android:text="brand name :"
                    android:textColor="@color/AlertRed"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>



        <LinearLayout
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:foreground="?android:selectableItemBackground"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal"
            android:paddingLeft="25dp">

            <TextView
                android:id="@+id/profileProffessionText"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground"
                android:contextClickable="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:text="live @"
                android:textColor="@color/AlerLime"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/profileProffession"
                android:layout_width="35dp"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground"
                android:contextClickable="true"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:src="@drawable/placeholder" />

        </LinearLayout>





        <LinearLayout
            android:layout_width="270dp"
            android:clickable="true"
            android:contextClickable="true"
            android:layout_height="50dp"
            android:layout_marginStart="75dp"
            android:backgroundTint="@color/BlueishBlack"
            android:background="@drawable/follow_button_background"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="60dp"
            android:orientation="vertical">

            <LinearLayout
                android:clickable="true"
                android:contextClickable="true"
                android:foreground="?android:selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="25dp">

                <TextView
                    android:id="@+id/profileNameTextModelTwo"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:linksClickable="true"
                    android:text="Browse Store"
                    android:textColor="@color/AlertRed"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/profileNameIconTwo"
                    android:layout_width="80dp"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:contextClickable="true"
                    android:layout_height="match_parent"
                    android:src="@drawable/link" />


            </LinearLayout>



        </LinearLayout>

        <ProgressBar
            android:id="@+id/SirrocoMaxProgressBar"
            android:layout_width="100dp"
            android:layout_marginTop="150dp"
            android:layout_marginStart="150dp"
            android:layout_height="100dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>