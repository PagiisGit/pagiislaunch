<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:backgroundTint="@color/lightOrrnge"
    android:background="@color/LemonChaffon"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".PagiisMaxView">


    <include
        android:id="@+id/chatbarLayout"
        layout="@layout/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="3dp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"
        android:background="#55000000"
        android:backgroundTint="#fff"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:clickable="true"
            android:foreground="?android:selectableItemBackground"
            android:foregroundGravity="center"
            android:src="@drawable/viewers" />


        <TextView
            android:id="@+id/linkTextViewViewers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:contextClickable="true"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center"
            android:linksClickable="true"
            android:textStyle="bold"
            android:text="views"
            android:textColor="@color/AlertRed"
            android:textSize="12sp" />


        <ImageView
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:clickable="true"
            android:foreground="?android:selectableItemBackground"
            android:foregroundGravity="center"
            android:src="@drawable/location_group" />


        <TextView
            android:id="@+id/linkTextViewShares"
            android:layout_width="50dp"
            android:layout_height="15dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:contextClickable="true"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center"
            android:linksClickable="true"
            android:text="Shared"
            android:textStyle="bold"
            android:textColor="@color/AlertRed"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:clickable="true"
            android:foreground="?android:selectableItemBackground"
            android:foregroundGravity="center"
            android:src="@drawable/click_one" />


        <TextView
            android:id="@+id/linkRipple"
            android:layout_width="50dp"
            android:layout_height="15dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:contextClickable="true"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center"
            android:linksClickable="true"
            android:text="Ripple"
            android:textStyle="bold"
            android:textColor="@color/AlertRed"
            android:textSize="12sp" />


        <ImageView
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:clickable="true"
            android:foreground="?android:selectableItemBackground"
            android:foregroundGravity="center"
            android:src="@drawable/location_based_chat" />


        <TextView
            android:id="@+id/linkTextViewLocationChat"
            android:layout_width="50dp"
            android:layout_height="15dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:contextClickable="true"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center"
            android:textStyle="bold"
            android:linksClickable="true"
            android:text="Update"
            android:textColor="@color/grayliggt"
            android:textSize="12sp" />


    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:padding="7dp"
        android:layout_height="match_parent"
        android:background="#55000000"
        android:backgroundTint="@color/Orrnge"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="36dp">


        <ProgressBar
            android:id="@+id/PagiisMaxProgressBar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center" />


        <ImageView
            android:id="@+id/pagiis_max_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#fff"
            android:clickable="true"
            android:contextClickable="true"
            android:foreground="?android:selectableItemBackground"
            android:src="@drawable/gallery" />

        <TextView
            android:id="@+id/linkTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/robobold"
            android:layout_centerHorizontal="true"
            android:background="#55000000"
            android:clickable="true"
            android:contextClickable="true"
            android:ellipsize="end"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center"
            android:lines="1"
            android:linksClickable="true"
            android:textSize="15sp"
            android:scrollHorizontally="true"
            android:text="title"
            android:textColor="@color/AlertRed" />

        <ImageView
            android:id="@+id/ripplePost"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/BlueishBlack"
            android:clickable="true"
            android:src="@drawable/click_one" />

    </androidx.cardview.widget.CardView>





</RelativeLayout>