<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/Orrnge"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_margin="5dp"
            android:text="Search location" />

        <EditText
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@color/BlueishBlack"
            android:textColorHint="@color/EndBlue"
            android:layout_gravity="center"
            android:hint="What's the location ??"
            android:id="@+id/facebookLinkEdit"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />


        <androidx.cardview.widget.CardView
            android:layout_marginBottom="10dp"
            android:id="@+id/saveStatus"
            android:contextClickable="true"
            android:layout_width="50dp"
            android:clickable="true"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal">


            <ImageView
                android:layout_width="70dp"
                android:clickable="true"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/search_for_online_users" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>


</androidx.cardview.widget.CardView>